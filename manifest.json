{
  "name": "SciRate Assistant",
  "version": "1.1.5",
  "description": "SciRate Assistant is a Chrome extension to offer SciRate users a personalized experience...",
  "permissions": [
    "activeTab", "declarativeContent", "storage", "tabs", 
    "https://scirate.com/",
    "https://arxiv.org/",
    "https://scholar.google.com/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/sa16.png",
      "32": "images/sa32.png",
      "48": "images/sa48.png",
      "128": "images/sa128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/sa16.png",
    "32": "images/sa32.png",
    "48": "images/sa48.png",
    "128": "images/sa128.png"
  },
  "manifest_version": 2
}
